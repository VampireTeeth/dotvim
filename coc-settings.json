{
    "languageserver": {
        "haskell": {
            "command": "hie-wrapper",
            "args": ["--lsp", "-d", "--vomit"],
            "rootPatterns": [
                "stack.yaml",
                "cabal.project",
                "package.yaml",
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                }
            }
        },

        "kotlin": {
            "command": "kotlin-language-server",
            "rootPatterns": [
                "pom.xml",
                "build.gradle",
                "build.gradle.kts"
            ],
            "filetypes": ["kt", "kotlin"]
        }
    }
}
